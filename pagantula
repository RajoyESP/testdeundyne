local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Undertale 3D Boss Battles", IntroEnabled = true, IntroText = "ðŸ˜ŽðŸ˜ŽðŸ˜Ž", HidePremium = false, SaveConfig = true, ConfigFolder = "Porongatest"})

getgenv().autofighthal = true;

local AutoTab = Window:MakeTab({
	Name = "Automate Stuff Tab",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

function autoFight()
    while getgenv().autofighthal == true do
        for i, v in pairs(game:GetService("Workspace").Halloween:GetDescendants()) do
            if v.Name == "jackolantern" then
            firetouchinterest(game.Players.LocalPlayer.Character.Head, v, 1)
            wait(0.1)
            firetouchinterest(game.Players.LocalPlayer.Character.Head, v, 0)
            wait(1)
            firetouchinterest(game.Players.LocalPlayer.Character.Head, workspace.Halloween.HalloweenDoor1.Door, 1)
            wait(0.1)
            firetouchinterest(game.Players.LocalPlayer.Character.Head, workspace.Halloween.HalloweenDoor1.Door, 0)
        end
    end
end
end

AutoTab:AddToggle({
	Name = "Auto Fight",
	Default = false,
	Callback = function(Value)
		getgenv().autofighthal = Value
        autoFight()
	end    
})

OrionLib:Init()
